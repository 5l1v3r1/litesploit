#!/bin/bash
dir="/etc/litesploit"
runtime="app/runtime"
printf "

  _        _   _                          _           _   _   
 | |      (_) | |                        | |         (_) | |  
 | |       _  | |_    ___   ___   _ __   | |   ___    _  | |_ 
 | |      | | | __|  / _ \ / __| | '_ \  | |  / _ \  | | | __|
 | |____  | | | |_  |  __/ \__ \ | |_) | | | | (_) | | | | |_ 
 |______| |_|  \__|  \___| |___/ | .__/  |_|  \___/  |_|  \__|
                                 | |                          
                                 |_|    
\n"
case "$1" in
  "help")
    echo "litesploit [exploit/file]"
  ;;
  "run")
    if [ -f "$2" ]; then
      php $dir/$runtime $2
      printf "\n"
    else 
      printf "Failed running exploit $2, exploit not found\n"
    fi 
  ;;
    *)
      php $dir/$runtime
  s;;
esac